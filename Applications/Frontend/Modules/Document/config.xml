<?xml version="1.0" encoding="utf-8" ?>
<module name="document">
	<action name="all">
		<!--JS-->
		<js src="/Scripts/Extras/epub.js-master/build/epub.min.js"/>
		<js src="/Scripts/Extras/epub.js-master/build/libs/zip.min.js"/>
		<js src="/Scripts/Extras/epub.js-master/build/hooks.min.js"/>
		<js src="/Scripts/Extras/epub.js-master/build/reader.min.js"/>
		<js src="/Scripts/Extras/epub.js-master/build/libs/fileStorage.min.js"/>
		<!--Config-->
		<includes>
			<include src="File"/>
		</includes>
	</action>
	<action name="insert">
		<!--Message-->
		<flashs>
			<flash var="invalid-type">
				<string lang="fr" value="Type du fichier invalide"/>
			</flash>
			<flash var="infected-file">
				<string lang="fr" value="Attention : fichier infecté"/>
			</flash>
			<flash var="upload-failed">
				<string lang="fr" value="Echec lors de l\'upload, veuillez réessayer dans quelques instants"/>								
			</flash>
			<flash var="invalid-type">
				<string lang="fr" value="Type de fichier bon supporté"/>
			</flash>
			<flash var="access-denied">
				<string lang="fr" value="Vous n'avez pas l'authorisation de supprimer cette image"/>
			</flash>
			<flash var="invalid-form">
				<string lang="fr" value="Un ou plusieurs champs invalides."/>
			</flash>
			<flash var="mysql-record-failed">
					<string lang="fr" value="L'enregistrement a échoué, veuillez réessayer dans quelques instant 
										; si le problème persiste veuillez contacter un administrateur "/>								
			</flash>
			<flash var="invalid-type">
					<string lang="fr" value="Le type du fichier est invalide."/>
			</flash>
			<flash var="sucessful-record">
				<string lang="fr" value="Enrgistrement terminé"/>
			</flash>
		</flashs>
	</action>
</module>
